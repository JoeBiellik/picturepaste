extends layout

block content
  a.d-none.d-md-block(href='https://github.com/JoeBiellik/picturepaste', aria-hidden='true', style='position: absolute; top: 0; right: 0; border: 0;')
    img(src='https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png', alt='Fork me on GitHub')

  main.container.p-3
    h1.display-3.d-none.d-md-block #{title}

    form.alert-primary.rounded.text-center(action='/?redirect', method='POST', enctype='multipart/form-data')
      section#upload
        svg.my-5.octicon.octicon-cloud-upload(viewBox='0 0 16 16', aria-hidden='true')
          path(fill-rule='evenodd', d='M7 9H5l3-3 3 3H9v5H7V9zm5-4c0-.44-.91-3-4.5-3C5.08 2 3 3.92 3 6 1.02 6 0 7.52 0 9c0 1.53 1 3 3 3h3v-1.3H3c-1.62 0-1.7-1.42-1.7-1.7 0-.17.05-1.7 1.7-1.7h1.3V6c0-1.39 1.56-2.7 3.2-2.7 2.55 0 3.13 1.55 3.2 1.8v1.2H12c.81 0 2.7.22 2.7 2.2 0 2.09-2.25 2.2-2.7 2.2h-2V12h2c2.08 0 4-1.16 4-3.5C16 6.06 14.08 5 12 5z')

        .form-group
          input#files.form-control-file(type='file', name='file', accept=formats, required)
          label(for='files')
            .btn.btn-lg.btn-primary Choose a file
            span.ml-2 or paste/drag and drop one here

        small Supports
          var #{formats.replace(/,/g, ' ')}

        .form-group.mt-5
          label.mr-2(for='expire') Expire after
          select#expire.custom-select(name='expire')
            each val, key in expires
              option(value=key, selected=(key == expiresDefault)) #{val}

      section#uploading
        .progress
          .progress-bar.progress-bar-striped.progress-bar-animated(role='progressbar', style='width: 0; height: 50px;')
        p.mt-3
